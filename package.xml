      <user>MJ</user>
      <name>Martin Jansen</name>
      <email>mj@php.net</email>
      <role>lead</role>
    </maintainer>
    <maintainer>
      <user>jflemer</user>
      <name>James E. Flemer</name>
      <email>jflemer@acm.jhu.edu</email>
      <role>developer</role>
    </maintainer>
  </maintainers>
  <release>
    <version>1.2.1</version>
    <date>2003-XX-XX</date>
    <license>PHP License</license>
    <state>stable</state>
    <notes>
<![CDATA[
* Added new MDB storage container written by  Lorenzo Alberton
]]>
    </notes>
    <filelist>
      <file role="php" baseinstalldir="Auth" name="Auth.php"/>
      <file role="php" baseinstalldir="Auth" name="Container.php"/>
      <file role="doc" baseinstalldir="Auth" name="README.Auth"/>
      <dir name="Container" role="php" baseinstalldir="Auth">
       <file name="DB.php"/>
       <file name="File.php"/>
       <file name="IMAP.php"/>
       <file name="POP3.php"/>
       <file name="LDAP.php"/>
       <file name="MDB.php"/>
       <file name="RADIUS.php"/>
       <file name="SOAP.php"/>
       <file name="vpopmail.php"/>
      </dir>
    </filelist>
  </release>

</package>
